<Window x:Class="AutoUpdate.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoUpdate"
        mc:Ignorable="d"
        Title="自动更新" Height="100" WindowState="Minimized" WindowStartupLocation="CenterScreen" Closing="Window_Closing" ResizeMode="CanMinimize" Width="350">
    <Grid Margin="0,0,0,0">
        <Label Content="更新文件数:" HorizontalAlignment="Left" Margin="15,10,0,0" VerticalAlignment="Top" x:Name="lblCount"/>
        <ProgressBar HorizontalAlignment="Center" Height="10" Margin="0,40,0,0" VerticalAlignment="Top" Width="320" x:Name="progress"/>
        <Label Content="0%" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" x:Name="lblprogress"/>


    </Grid>
</Window>
